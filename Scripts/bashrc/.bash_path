export PATH=$PATH:$JAVA_HOME/bin:$C/HashiCorp/Vagrant/bin:$M2_HOME/bin:$CXF_HOME/bin:$UBIN:$CATALINA_HOME/bin:$GPG/pub:$PHANTOMJS:$CASPER_BIN:$NODEJS
