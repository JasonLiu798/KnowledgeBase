#!/bin/bash
#hard disk
export C=/c
export D=/d
export E=/e
export F=/f
#common 
export YP=$D/yp
export TOOLS=$D/tools
export CYGWIN=$TOOLS/cygwin

#ubin & serverfile config
export UBIN=$YP/ubin
export BLIB=$UBIN/lib
export DDIR=$UBIN/data

export SETUP=/opt/setups
export TL=/opt/tools
